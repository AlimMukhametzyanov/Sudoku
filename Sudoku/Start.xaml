<Window x:Class="Sudoku.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start" Height="200" Width="300" ResizeMode="NoResize" WindowStartupLocation="CenterScreen" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="155*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Введите название игры:" HorizontalAlignment="Left" Margin="7,7,0,0" VerticalAlignment="Top" Width="272" Grid.ColumnSpan="2"/>
        <TextBox Name="tbName" HorizontalAlignment="Left" Height="23" Margin="10,33,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="260" Grid.ColumnSpan="2" MaxLength="15"/>
        <Label Content="Выберите сложность:" HorizontalAlignment="Left" Margin="7,69,0,0" VerticalAlignment="Top" Width="272" Grid.ColumnSpan="2"/>
        <ComboBox Name="cmbDifficulty" HorizontalAlignment="Left" Height="25" Margin="10,95,0,0" VerticalAlignment="Top" Width="260" Grid.ColumnSpan="2"/>
        <Button Name="btnOk" Content="Ок" HorizontalAlignment="Left" Height="27" Margin="25,130,0,0" VerticalAlignment="Top" Width="88" Click="btnOk_Click" Grid.Column="1"/>
        <Button Name="btnBack" Content="Назад" HorizontalAlignment="Left" Margin="40,130,0,0" VerticalAlignment="Top" Width="88" Height="27" Click="btnBack_Click"/>

    </Grid>
</Window>
