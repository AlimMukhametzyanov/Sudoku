<Window x:Class="Sudoku.Start"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Start" Height="200" Width="300" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="137*"/>
            <ColumnDefinition Width="155*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Введите название игры:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="272" Grid.ColumnSpan="2"/>
        <TextBox Name="tbName" HorizontalAlignment="Left" Height="23" Margin="13,36,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="272" Grid.ColumnSpan="2"/>
        <Label Content="Выберите сложность:" HorizontalAlignment="Left" Margin="10,67,0,0" VerticalAlignment="Top" Width="272" Grid.ColumnSpan="2"/>
        <ComboBox Name="cmbDifficulty" HorizontalAlignment="Left" Height="25" Margin="10,98,0,0" VerticalAlignment="Top" Width="269" Grid.ColumnSpan="2"/>
        <Button Name="btnOk" Grid.ColumnSpan="2" Content="Ок" HorizontalAlignment="Left" Height="27" Margin="94,132,0,0" VerticalAlignment="Top" Width="88" Click="btnOk_Click"/>

    </Grid>
</Window>
